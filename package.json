{
  "name": "@windoge98/plug-n-play",
  "version": "0.1.0-beta.6",
  "description": "Wallet wrapper/adapter for easy authentication on the Internet Computer",
  "module": "dist/plug-n-play.es.js",
  "main": "dist/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/plug-n-play.es.js",
      "require": "./dist/plug-n-play.umd.js",
      "default": "./dist/plug-n-play.es.js"
    }
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/*",
    "demo/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:solana": "BUILD_PACKAGE=solana vite build",
    "build:ethereum": "BUILD_PACKAGE=ethereum vite build",
    "build:all": "npm run build && npm run build:solana && npm run build:ethereum",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "link:all": "./link-all.sh",
    "unlink:all": "./unlink-all.sh",
    "docs": "typedoc",
    "docs:clean": "rm -rf ./docs",
    "docs:build": "npm run docs:clean && npm run docs",
    "docs:serve": "npx http-server ./docs -p 8080",
    "publish:beta": "npm publish --tag beta && cd packages/solana && npm publish --tag beta && cd ../ethereum && npm publish --tag beta",
    "publish:beta:dry": "npm run build:all && npm publish --dry-run --tag beta && cd packages/solana && npm publish --dry-run --tag beta && cd ../ethereum && npm publish --dry-run --tag beta"
  },
  "author": "windoge98",
  "license": "MIT",
  "dependencies": {
    "@dfinity/agent": "^2.4.1",
    "@dfinity/auth-client": "2.4.1",
    "@dfinity/candid": "^2.4.1",
    "@dfinity/identity": "^2.4.1",
    "@dfinity/ledger-icp": "2.6.13",
    "@dfinity/principal": "2.4.1",
    "@dfinity/utils": "2.14.0",
    "@slide-computer/signer": "3.16.0",
    "@slide-computer/signer-agent": "3.16.0",
    "@slide-computer/signer-extension": "^3.16.0",
    "@slide-computer/signer-storage": "3.16.0",
    "@slide-computer/signer-transport-stoic": "^3.16.0",
    "@slide-computer/signer-web": "^3.16.0"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@rollup/plugin-inject": "^5.0.5",
    "docdash": "^2.0.2",
    "jsdoc": "^4.0.4",
    "jsdom": "26.1.0",
    "terser": "5.43.1",
    "typedoc": "^0.28.10",
    "vite": "7.1.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "4.5.4",
    "vite-plugin-static-copy": "3.1.1",
    "vitest": "3.2.4"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=18.0.0"
  }
}
